{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "outDir": "../dist",
    "baseUrl": "",
    "rootDir": "./",
    "lib": [
        "es6",
        "dom",
        "esnext"
    ]
  },
  "include": [
    "./*.ts"
  ]
}
