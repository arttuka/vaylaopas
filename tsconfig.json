{
  "compilerOptions": {
    "noEmitOnError": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ESNext.Array",
      "scripthost",
      "es2015.promise"
    ],
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "rootDir": "./",
    "noErrorTruncation": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "include": [
    "src"
  ]
}
